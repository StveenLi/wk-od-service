/**app.wxss**/
@import 'styles/zanui.wxss';
@import 'styles/weui.wxss';

button{
  border-radius: 7px;
}

.wx-switch-input{width:42px !important;height:20px !important;}
.wx-switch-input::before{width:41px !important;height: 20px !important;}
.wx-switch-input::after{width: 21px !important;height: 18px !important;}
.weui-cells{
  margin-top: 0!important;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  width: 100%;
}

page {
  background-color: #f3f3f3;
  height: 100%;
  width: 100%;
  font-family: PingFangSC;
  font-size: 12px;
  font-weight: 100;
  font-weight: normal;
  font-stretch: normal;
  text-align: left;
  color: #4a4a4a;
}

.top-box {
  background: #fff;
  margin: 10px;
  border-radius: 5px;
  padding: 5px 10px;
}

.top-box-title {
  display: flex;
  flex-direction: row;
}

.border-bottom-gainsboro {
  border-bottom: 1px solid #F4F4F4;
}

.bottom-box {
  background: #fff;
  margin: 10px 10px 60px 10px;
  border-radius: 5px;
  padding: 5px 10px;
}

.middle-box {
  background: #fff;
  margin: 10px 10px 10px 10px;
  border-radius: 5px;
  padding: 5px 10px;
}

.title {
  text-align: center;
  flex: 1;
  font-size: 14px;
}

.bottom-btn {
  bottom: 0;
  background: #3c8df9;
  color: #fff;
  z-index:10;

}

.bottom-btn-view {
  position: fixed;
  bottom: 0;
  width: 100%;
  background: #3c8df9;
  color: #fff;
  z-index:10;

}

.comment-btn {
  position: fixed;
    width: 100%;
  bottom: 0;
  font-size: 14px
}

.flex-row{
  display: flex;
  flex-direction: row;
}

.flex-column{
  display: flex;
  flex-direction: column;
}

.flex-1{
  flex: 1;
}

.box-all{
  width: 100%;
  height: 100%
}

.middle-all{
  align-items: center;
  justify-content: center;
  text-align: center;
}

.work-item{
  display: flex;
  flex-direction: column;
  font-size: 30rpx;
  margin: 0 10px 10px 10px;
  border-radius: 5px;
  padding:20rpx;
  background:#fff; 
}

.view-shadow{
  box-shadow: 0 0 10px 0 rgba(0,0,0,0.05);
}
.padding-5{
