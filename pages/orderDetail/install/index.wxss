/* pages/workOrder/install/index.wxss */

view {
  font-size: 12px;
}

.content {
  width: 100%;
}

.firstCanvas {
  background-color: #fff;
  width: 100%;
  height: 200px;
}

.sign-button {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  line-height: 80px;
  background: #3faf74;
  color: #fff;
  margin: 5px auto;
}

.sign-button-active {
  background: #999;
}

.button-line {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  border: 1px solid #3faf74;
  margin: 0 auto;
}

.work-order-content {
  color: #4aa3fb;
  font-size: 12px;
  text-align: right;
  margin-right: 5px;
}

.content-style {
  font-size: 12px;
  margin: 0 10px;
}

.order-type-icon {
  border-radius: 50%;
  background: #ffc0cb;
  width: 29px;
  height: 25px;
  color: #fff;
  margin: 5px;
  text-align: center;
  padding: 4px 0 0 0;
}
