/* pages/workOrder/install/index.wxss */

view {
  font-size: 12px;
}

.content {
  width: 100%;
}

.firstCanvas {
  background-color: #fff;
  width: 100%;
  height: 200px;
}

.sign-button {
  width: 80px;
  height: 80px;
  border-radius: 50%;
  line-height: 80px;
  background: #3faf74;
  color: #fff;
  margin: 5px auto;
}

.sign-button-active {
  background: #999;
}

.button-line {
  width: 90px;
  height: 90px;
  border-radius: 50%;
  border: 1px solid #3faf74;
  margin: 0 auto;
}

.work-order-content {
  color: #4aa3fb;
  font-size: 12px;
  text-align: right;
  margin-right: 5px;
}

.content-style {
  font-size: 12px;
  margin: 0 10px;
}

.order-type-icon {
  border-radius: 50%;
  background: #ffc0cb;
  width: 29px;
  height: 25px;
  color: #fff;
  margin: 5px;
  text-align: center;
  padding: 4px 0 0 0;
}

/*弹出*/
.show-btn {
  margin-top: 100rpx;
  color: #22cc22;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 540rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: -180rpx 105rpx;
  border-radius: 36rpx;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
}

.modal-input {
  display: flex;
  background: #fff;
  border: 2rpx solid #ddd;
  border-radius: 4rpx;
  font-size: 28rpx;
}


.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}

.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #ec5300;
  text-align: center;
}