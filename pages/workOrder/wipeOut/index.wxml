        <view class="weui-label">装卸费</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" bindinput='zxChange' placeholder="装卸费" disabled='true' value='{{orderDetail.dWipe.coolieToll}}' />
      </view>
