      <view class="weui-cell__hd">
        <view class="weui-label">汽油费</view>
      </view>
      <view class="weui-cell__bd">
        <input class="weui-input" bindinput='qyChange' placeholder="汽油费" disabled='true' value='{{orderDetail.dWipe.postage}}' />
      </view>
    </view> -->

