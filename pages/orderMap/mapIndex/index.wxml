<!--pages/orderMap/mapIndex/index.wxml-->
<map
  id="map"
  longitude="{{longitude}}"
  latitude="{{latitude}}"
  scale="{{scale}}"
  bindcontroltap="controltap"
  markers="{{markers}}"
  bindmarkertap="markertap"
  bindregionchange="regionchange"
  show-location
  show-compass
  style="width: 100%; height: 100%;"
  controls="{{controls}}" 
></map>